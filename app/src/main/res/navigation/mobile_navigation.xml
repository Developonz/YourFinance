<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_transactions">

    <fragment
        android:id="@+id/navigation_transactions"
        android:name="com.example.yourfinance.view.fragments.TransactionsFragment"
        android:label="@string/title_transactions"
        tools:layout="@layout/fragment_transactions" >
        <argument
            android:name="restoreState"
            app:argType="boolean"
            android:defaultValue="true"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.yourfinance.view.fragments.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_statistic" />


    <fragment
        android:id="@+id/navigation_statistic"
        android:name="com.example.yourfinance.view.fragments.StatisticFragment"
        android:label="@string/title_statistic"
        tools:layout="@layout/fragment_wallet" />

    <fragment
        android:id="@+id/navigation_wallet"
        android:name="com.example.yourfinance.view.fragments.WalletFragment"
        android:label="@string/title_wallet"
        tools:layout="@layout/fragment_transactions" />
</navigation>